<h2>Add Car</h2>

<%= form_for @car do |f| %>

<% if @car.errors.any? %>
    <ul>
      <% @car.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end%>
    </ul>
  <% end %>

  <div>
    <%= f.label :color %>
    <%= f.text_field :color %>
  </div>
  <div>
    <%= f.label :year %>
    <%= f.text_field :year %>
  </div>
  <div>
    <%= f.label :mileage %>
    <%= f.text_field :mileage %>
  </div>
  <div>
    <%= f.label :manufacturer_id %>
    <%= f.collection_select(:manufacturer_id, @manufacturers, :id, :name) %>
    <%= link_to 'Add manufacturer', new_manufacturer_path %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.submit 'Submit' %>
  </div>
<% end %>

